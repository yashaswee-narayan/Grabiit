<body>
  <!--******************* nav bar **************-->
  <%- include('./partials/navbar'); %>

    <section id="subj-container" class="container-fluid p-5" style="background-color: var(--ash);">
      <div class="container">
        <div class="row flexible">

          <div class="col-lg-8 col-md-12 align-self-center">
            <div class="col-12 col-lg-9">
              <h2 class="headline m-auto ">
                Master the art of interview by taking tests on each topic...
              </h2>

              <div class="d-flex flex-wrap justify-content-between my-5 course-box">
                <!-- Individual boxes  -->
                <div class="size cat-1  " onclick="showHideSubTopics( 'dsa'); showHideColour('cat-1');">
                  <div class=" ">
                    <div
                      class="rounded-circle d-flex justify-content-center coloured-circles mt-2 extra  shadow m-auto incre align-items-center">
                      <img src="images/dsa.png"></img>
                    </div>
                    <div class="px-3 pt-2">

                      <p class="text-center mb-1" style="font-weight: bold">
                        DSA
                      </p>

                    </div>
                  </div>
                </div>

                <!-- Individual boxes  -->
                <div class="size cat-2  " onclick="showHideSubTopics( 'core'); showHideColour('cat-2');">
                  <div class=" ">
                    <div
                      class="rounded-circle d-flex justify-content-center coloured-circles mt-2 extra shadow m-auto incre align-items-center">
                      <img src="images/core.png"></img>
                    </div>
                    <div class="px-3 pt-2">

                      <p class="text-center mb-1" style="font-weight: bold">
                        Core
                      </p>

                    </div>
                  </div>
                </div>
                <!-- Individual boxes  -->
                <div class="size cat-3  " onclick="showHideSubTopics('aptitude'); showHideColour('cat-3');">
                  <div class="">
                    <div
                      class="rounded-circle d-flex justify-content-center coloured-circles mt-2 extra shadow m-auto incre align-items-center">
                      <img src="images/aptitude.png"></img>
                    </div>
                    <div class="px-3 pt-2">

                      <p class="text-center mb-1" style="font-weight: bold">
                        Aptitude
                      </p>

                    </div>
                  </div>
                </div>
                <!-- Individual boxes  -->
                <div class="size cat-4 " onclick="showHideSubTopics('verbal');showHideColour('cat-4'); ">
                  <div class=" ">
                    <div
                      class="rounded-circle d-flex justify-content-center coloured-circles mt-2 extra shadow m-auto incre align-items-center">
                      <img src="images/verbal.png"></img>
                      <!-- <i class="fas fa-book-open pt-3" style="font-size: 30px; color: var(--primary)"></i> -->
                    </div>
                    <div class="px-3 pt-2">

                      <p class="text-center mb-1" style="font-weight: bold">
                        Verbal
                      </p>

                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
          <div class="col-lg-4 col-md-12 man">
            <img src="/images/course.png" class="w-100 " alt="" />

          </div>
        </div>
        <!--1st row ends-->

        <!--dsa-->
        <div class="row d-flex justify-content-start view-topic-1 dsa card-topics">
          <!-- cards -->
          <% if (dsa) { %>
            <% dsa.forEach(element=> { %>
              <div class="col-lg-3 col-md-6 col-sm-12 size2 mb-sm-3 mb-md-5">
                <div class="w-100 h-100  bg-white d-flex flex-column neu">


                  <div class="d-flex justify-content-start ">
                    <div
                      class="rounded-circle d-flex justify-content-center align-items-center coloured-circles my-3 shadow ms-3 "
                      style="background-color: #ffd6cf;">
                      <i class="fa-solid fa-link" style="font-size: 30px; color: #ec4807"></i>
                    </div>
                  </div>


                  <div class="d-flex m-auto flex-column mx-3">
                    <h5 class="styling">
                      <%= element.title %>
                    </h5>
                    <p>
                      <%= element.desc %>
                    </p>

                    <div class="d-flex mt-2">
                      <div>
                        <div class="d-flex justify-content-start align-items-center  ">
                          <img src="images/questions.png" style="width: 20px; height: 20px;" class=""></img>
                          <p class="mb-0 ms-4 " style="font-weight: 600">
                            <%= element.count %> MCQs
                          </p>
                        </div>

                        <div class="d-flex justify-content-start align-items-center mb-4 ">
                          <img src="images/timer.png" style="width: 20px; height: 20px;" class=""></img>
                          <p class="mb-0 ms-4 " style="font-weight: 600">
                            <%= element.totalTime %> minutes
                          </p>
                        </div>
                      </div>

                      <a href="/start/<%- element._id  %> ">

                        <div
                          class="rounded-circle d-flex justify-content-center align-items-center coloured-circles shadow neu2 ms-5"
                          style="width: 40px; height: 40px;">
                          <img src="images/play.png" style="width: 20px; height: 20px;" class=""></img>
                        </div>

                      </a>
                    </div>

                  </div>
                </div>
              </div>
              <% }) %>
                <% } %>
                  <!-- cards end -->
        </div>
